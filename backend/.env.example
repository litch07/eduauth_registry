# Database (MySQL via XAMPP)
DATABASE_URL="mysql://root:@localhost:3306/eduauth_registry"

# JWT Secret (min 32 chars)
JWT_SECRET="replace-with-random-hex"

# AES-256 Encryption Keys (hex)
ENCRYPTION_KEY="64-character-hex-string"
ENCRYPTION_IV="32-character-hex-string"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
EMAIL_FROM="EduAuth Registry <your-email@gmail.com>"

# Application URLs
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:5000"
PORT=5000
NODE_ENV="development"

# Uploads
MAX_FILE_SIZE=5242880
UPLOAD_PATH="./uploads"
